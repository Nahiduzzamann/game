{
  "compilerOptions": {
    "module": "nodenext", // Set module to 'nodenext' to match moduleResolution
    "moduleResolution": "nodenext", // Use 'nodenext' for module resolution
    "target": "esnext", // Choose an appropriate ECMAScript version
    "esModuleInterop": true, // Allows default imports from modules with no default export
    "strict": true, // Enable strict type-checking options
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of source files
    "skipLibCheck": true, // Skip type checking of declaration files
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
